{
  "name": "marpboilerplatesandthemes",
  "version": "1.0.0",
  "description": "Repository for Mapr Boilderplates and Themes",
  "main": "",
  "scripts": {
    "build:diabolo-css": "npx sass ./src/diabolo/diabolo.scss ./themes/diabolo.css",
    "build:diabolo-pdf": "npx marp -c ./marp/diabolo.pdf.yml",
    "build:diabolo-html": "npx marp -c ./marp/diabolo.html.yml",
    "build:diabolo-png": "npx marp -c ./marp/diabolo.png.yml",
    "build:minimal-css": "npx sass ./src/minimal/minimal.scss ./themes/minimal.css",
    "build:minimal-pdf": "npx marp -c ./marp/minimal.pdf.yml",
    "build:minimal-html": "npx marp -c ./marp/minimal.html.yml",
    "build:minimal-png": "npx marp -c ./marp/minimal.png.yml",
    "build-all": "npm-run-all build:*",
    "build-themes": "npm-run-all build:*-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxmeffert/MarpBoilerplatesAndThemes.git"
  },
  "author": "Maximilian Meffert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxmeffert/MarpBoilerplatesAndThemes/issues"
  },
  "homepage": "https://github.com/maxmeffert/MarpBoilerplatesAndThemes#readme",
  "devDependencies": {
    "@marp-team/marp-cli": "^0.17.3",
    "highlight.js": "^9.18.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.3"
  }
}
