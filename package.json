{
  "name": "marpboilerplatesandthemes",
  "version": "1.0.0",
  "description": "Repository for Mapr Boilderplates and Themes",
  "main": "index.js",
  "scripts": {
    "build-theme": "npx sass ./themes/scss/minimal.scss ./themes/css/minimal.css",
    "build-slides": "npx marp -c minimal.pdf.marp.yml",
    "build-slides-html": "npx marp -c minimal.html.marp.yml",
    "build-slides-images": "npx marp -c minimal.img.marp.yml",
    "build": "npm run build-theme && npm run build-slides"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxmeffert/MarpBoilerplatesAndThemes.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxmeffert/MarpBoilerplatesAndThemes/issues"
  },
  "homepage": "https://github.com/maxmeffert/MarpBoilerplatesAndThemes#readme",
  "devDependencies": {
    "@marp-team/marp-cli": "^0.17.1",
    "highlight.js": "^9.18.1",
    "sass": "^1.25.0"
  }
}
